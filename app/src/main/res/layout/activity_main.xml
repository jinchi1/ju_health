<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_profile">

    <FrameLayout
        android:id="@+id/main_base_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f7f7f7"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/base_bottm_menu"
        android:background="#9798a6" />

    <LinearLayout
        android:id="@+id/base_bottm_menu"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnMenu01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnImg1"
                android:layout_width="26.25dp"
                android:layout_height="33.25dp"
                android:layout_weight="1"
                android:src="@drawable/selector_btn_menu_0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMenu02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnImg2"
                android:layout_width="35.25dp"
                android:layout_height="32.25dp"
                android:layout_weight="1"
                android:src="@drawable/selector_btn_menu_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMenu03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnImg3"
                android:layout_width="17dp"
                android:layout_height="32.75dp"
                android:layout_weight="1"
                android:src="@drawable/selector_btn_menu_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMenu04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnImg4"
                android:layout_width="43dp"
                android:layout_height="32.5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_btn_menu_3" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout><!--</android.support.design.widget.CoordinatorLayout>-->
