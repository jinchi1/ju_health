<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="295dp"
    android:layout_height="107.5dp"
    tools:context="globesoft.ju_heath.FCM.PopupActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/white_alarm_frame">


    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="107.5dp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10.5dp"
                android:layout_marginLeft="20.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dip"
                    android:background="#ee2b47" />

                <TextView
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="주퍼맨 알림"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2.5dp"
            android:layout_marginLeft="30.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_custom"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="이재진님이 예약하셨습니다."
                android:textSize="16dp"
                android:textColor="#000000"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>