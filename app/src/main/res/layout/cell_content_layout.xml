<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/member_frame2"
    android:visibility="gone"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:layout_weight="2.5"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="00dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/head_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_man"
                    />


            </RelativeLayout>
            <!-- RIGHT TITLE PART -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="5dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="15dp">


                <TextView
                    android:id="@+id/contentNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="이재진"
                    android:textSize="13.75dp"
                    android:textStyle="bold"/>






                <ImageView
                    android:id="@+id/contentSexImageView"
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

                <ImageView
                    android:id="@+id/contentOpenImageView"
                    android:layout_width="6dp"
                    android:layout_height="4.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arrow_up"
                    />

                <LinearLayout
                    android:id="@+id/contentsignListLay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/sign_list"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22.5dp"
                    android:gravity="center">


                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="14.5dp"
                        android:src="@drawable/sign_list"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <!-- content body layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp">

        <!-- avatar and name part -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/contentDividerLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57.75dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="53.25dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.5dp"
                    android:textStyle="bold"
                    android:text="PT  "/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/contentNowCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.5dp"
                        android:textColor="#ee2b47"
                        android:text="00"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.5dp"
                        android:textColor="#ee2b47"
                        android:text=" / "
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/contentTotalCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.5dp"
                        android:textColor="#ee2b47"
                        android:text="00"
                        android:textStyle="bold"/>
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/contentPTWriteLay">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT 입력하기"
                    android:textSize="12.5dp"
                    android:textColor="#ee2b47"
                    android:layout_marginRight="53.25dp"/>

            </LinearLayout>


        </LinearLayout>



        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/contentDividerLine" />

        <!-- addresses part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93.75dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/content_from_badge"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="나이"
                    android:layout_alignParentLeft="true"
                    android:textSize="12.25dp"
                    android:textColor="#9798a6"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:id="@+id/contentAgeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/content_from_badge"
                    android:layout_below="@id/content_from_badge"
                    android:layout_marginTop="15.25dp"
                    android:text="24"
                    android:textColor="@color/mainTextColor"
                    android:textSize="13.5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_alignLeft="@id/content_from_badge" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/content_to_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="몸무게"
                    android:layout_alignParentLeft="true"
                    android:textSize="12.25dp"
                    android:textColor="#9798a6"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:id="@+id/contentWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/content_to_badge"
                    android:layout_below="@id/content_to_badge"
                    android:layout_marginTop="15.25dp"
                    android:text="60"
                    android:textColor="@color/mainTextColor"
                    android:textSize="13.5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_alignLeft="@id/content_to_badge" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/content_to_badge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="생일"
                    android:textColor="#9798a6"
                    android:textSize="12.25dp" />

                <TextView
                    android:id="@+id/contentBirthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_to_badge2"
                    android:layout_marginTop="15.25dp"
                    android:text="1990.12.06"
                    android:textColor="@color/mainTextColor"
                    android:textSize="13.5dp" />


            </RelativeLayout>

        </LinearLayout>

        <!-- divider line -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/contentDividerLine" />

        <!-- dates part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56.5dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:id="@+id/contentPhoneLinearLayout"
                android:layout_marginTop="5dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.5dp"
                    android:textColor="#32b95a"
                    android:textSize="14.5dp"
                    android:text="전화하기"/>
            </LinearLayout>
            x
        </LinearLayout>

        <!-- request button -->

    </LinearLayout>

</LinearLayout>