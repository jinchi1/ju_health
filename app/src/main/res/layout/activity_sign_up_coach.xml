<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60.75dp"
        android:text="코치 정보 입력"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="110.5dp"
            android:layout_height="122dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="62dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="13.25dp"
                android:textColor="#bbbbbb"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록한 이름은 수정할 수 없습니다."
                android:textSize="12dp"
                android:textColor="#bbbbbb"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/Edt_coach_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4.5dp"
            android:background="@drawable/id_frame"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="text"
            />

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="13.25dp"
                android:textColor="#bbbbbb"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락 가능한 전화번호를 입력해주세요."
                android:textSize="12dp"
                android:textColor="#bbbbbb"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/Edt_coach_phone"
            android:layout_marginTop="4.5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/id_frame"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            />

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체육관"
                android:textSize="13.25dp"
                android:textColor="#bbbbbb"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 체육관을 입력해주세요."
                android:textSize="12dp"
                android:textColor="#bbbbbb"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/Edt_coach_gym"
            android:layout_marginTop="4.5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/id_frame"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="text"/>
        <ImageView
            android:id="@+id/coach_signup_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/register_botton"
            android:layout_marginTop="33dp"
            />
    </LinearLayout>



</LinearLayout>
