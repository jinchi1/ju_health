<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16.5dp"
            android:text="프로필 수정"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/modifyButtonLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.25dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="완료"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_gravity="bottom"
        android:background="#ee2b47"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="22.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16.5dp"
                    android:layout_height="19dp"
                    android:src="@drawable/name_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.75dp"
                    android:text="이름"
                    android:textSize="16.75dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="이름은 변경할 수 없습니다."
                    android:textSize="12dp"
                    android:textColor="#bbbbbb"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <EditText
                    android:paddingRight="6dp"
                    android:id="@+id/editTextName"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="text"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="16.5dp"
                    android:gravity="right"
                    android:background="@null"/>
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="277dp"
                    android:layout_height="1.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_under"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="35dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15.5dp"
                    android:layout_height="23.25dp"
                    android:src="@drawable/phone_icon"/>

                <TextView
                    android:layout_marginLeft="16.25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16.5dp"
                    android:text="전화번호"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <EditText
                    android:paddingRight="6dp"
                    android:id="@+id/editTextPhone"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:background="@null"/>
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="277dp"
                    android:layout_height="1.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_under"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="34.25dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="17.25dp"
                    android:layout_height="13dp"
                    android:src="@drawable/unique_num_icon"/>

                <TextView
                    android:layout_marginLeft="15.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textSize="16.5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <EditText
                    android:paddingRight="6dp"
                    android:id="@+id/editTextAge"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textSize="16.5dp"
                    android:gravity="right"
                    android:background="@null"
                    />
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="277dp"
                    android:layout_height="1.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_under"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="33.25dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13.75dp"
                    android:src="@drawable/weight_icon"/>

                <TextView
                    android:layout_marginLeft="16.75dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="몸무게"
                    android:textSize="16.75dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom|center_horizontal"
                        android:paddingRight="6dp">

                        <EditText
                            android:id="@+id/editTextWeight"
                            android:paddingBottom="6dp"
                            android:paddingRight="3dp"
                            android:layout_width="260.5dp"
                            android:layout_height="wrap_content"
                            android:textSize="16.5dp"
                            android:gravity="right"
                            android:inputType="number"
                            android:background="@null"
                            />
                        <ImageView
                            android:layout_marginBottom="6dp"
                            android:layout_width="16.5dp"
                            android:layout_height="16.5dp"
                            android:src="@drawable/kg"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="277dp"
                        android:layout_height="1.5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_under"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16.75dp"
                    android:layout_height="18.5dp"
                    android:src="@drawable/birth_icon"/>

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생일"
                    android:textSize="16.5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/editText_birth"
                    android:paddingRight="6dp"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:textSize="16.5dp"
                    android:gravity="right"/>
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="277dp"
                    android:layout_height="1.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_under"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="34.75dp">

                <ImageView
                    android:layout_width="10.75dp"
                    android:layout_height="20.25dp"
                    android:src="@drawable/gender_icon"/>

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textSize="16.5dp"
                    android:gravity="right"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/TextView_gender"
                    android:paddingRight="6dp"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:textSize="16.5dp"
                    android:gravity="right"/>
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="277dp"
                    android:layout_height="1.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_under"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>




</LinearLayout>