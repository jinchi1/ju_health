<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="globesoft.ju_heath.Activity.LoginActivity"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="256.5dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/sign_in_btn"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="110.5dp"
                android:layout_height="122dp"
                android:src="@drawable/logo"
                android:layout_marginTop="72.5dp"/>

        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/facebook_login_button"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="invisible"></com.google.android.gms.common.SignInButton>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible" />


        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="256.5dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/edtText_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/id_frame"
                android:gravity="center"
                android:hint="e-mail"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtText_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="13.75dp"
                android:background="@drawable/id_frame"
                android:gravity="center"
                android:hint="password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="13.75dp"
                android:background="@drawable/login_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/findPW_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="비밀번호 찾기"
                    android:textColor="#9798a6"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="15.5dp"
                    android:background="#9798a6" />

                <TextView
                    android:id="@+id/sign_up_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="회원가입"
                    android:textSize="13dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="다른 방법으로 로그인"
                android:textColor="#9798a6"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fakeFacebookImageView"
                    android:layout_width="43.75dp"
                    android:layout_height="43.75dp"
                    android:layout_marginRight="12.125dp"
                    android:src="@drawable/icon_facebook" />

                <ImageView
                    android:id="@+id/fakeGoogleImageView"
                    android:layout_width="43.75dp"
                    android:layout_height="43.75dp"
                    android:layout_marginLeft="12.125dp"
                    android:src="@drawable/icon_google" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
