<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="206.25dp"
    android:layout_height="145dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_marginLeft="62.5dp"
            android:layout_marginTop="22.25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5dp"
            android:text="남"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5dp"
            android:gravity="right"
            android:layout_marginRight="64dp"
            android:text="여"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="27.75dp"
            android:layout_height="27.75dp"
            android:id="@+id/manImageView"
            android:src="@drawable/gender_man_gray"

            android:layout_marginLeft="53.5dp"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/womanImageVIew"
            android:src="@drawable/gender_woman_gray"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/okImageView"
            android:layout_width="108.75dp"
            android:layout_height="21dp"
            android:src="@drawable/ok_button"/>

    </LinearLayout>

</LinearLayout>