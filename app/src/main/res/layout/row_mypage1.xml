<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="8dp"
        android:gravity="center_vertical">

        <!--### 이름 ###-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="20.25dp"
                android:layout_height="23.25dp"
                android:src="@drawable/name_icon"/>
            <TextView
                android:id="@+id/title"
                android:layout_marginLeft="8.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#262a4f"
                android:textSize="12.5dp"
                android:text="이름"
                android:gravity="center_vertical|left"/>

            <EditText
                android:id="@+id/info_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#262a4f"
                android:text="주퍼맨"
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                android:singleLine = "true"
                android:lines = "1"
                android:background="@null"
                android:inputType="text"
                android:maxLength="10"/>
            <ImageView
                android:id="@+id/title_edit_icon"
                android:layout_marginLeft="16.5dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/edit_icon"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/title_cancel_icon"
                android:layout_marginLeft="16.5dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/small_cancel_btn"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>